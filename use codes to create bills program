package com.java;
import java.util.Scanner;
class main{
    public static void main(String[]args){
        Scanner scan=new Scanner(System.in);
        int choice;
        int count=1;
        int total=0;
        do{
            System.out.println("enter the prod value:");
            int a=scan.nextInt();
            total=total+a;
            System.out.println(count+"continue?(continue to 1/0 to exit);");
            choice=scan.nextInt();
            count++;
        }while(choice!=0);
        System.out.println("total amount:"+total);
        System.out.println("exited.");
        scan.close();
    }
}
